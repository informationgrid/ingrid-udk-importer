  <modelVersion>4.0.0</modelVersion>
  <artifactId>ingrid-udk-importer</artifactId>
  <version>6.3.0</version>
  <name>InGrid UDK-IGC Importer (IGC Updater)</name>
  <description>This component migrates a IGC database.</description>

  <properties>
    <ingrid-codelist-service.version>6.3.0</ingrid-codelist-service.version>
    <ingrid-utils.version>6.3.0</ingrid-utils.version>
    <ingrid-utils-ige.version>6.0.0</ingrid-utils-ige.version>
    <java.version>17</java.version>
  </properties>

  <build>
    <finalName>${project.artifactId}-${project.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <!-- Add Type of Component to be added to Manifest of Installer for Upgrade Server -->
        <configuration>
          <archive>
            <manifestEntries>
              <ingridComponentType>UDK_IMPORTER_UPDATER</ingridComponentType>
            </manifestEntries>
          </archive>
        </configuration>
        <executions>
          <!-- first build our exe jar with different main class -->
          <execution>
            <id>make-jar-with-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>true</appendAssemblyId>
              <descriptors>
                <descriptor>src/main/assembly/jar-with-dependencies.xml</descriptor>
              </descriptors>
              <archive>
                <manifest>
                  <mainClass>de.ingrid.importer.udk.Importer</mainClass>
                  <packageName>de.ingrid.importer.udk</packageName>
                </manifest>
              </archive>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>external.atlassian.jgitflow</groupId>
        <artifactId>jgitflow-maven-plugin</artifactId>
        <version>1.0-m5.1</version>
        <configuration>
          <defaultOriginUrl>https://github.com/informationgrid/ingrid-udk-importer</defaultOriginUrl>
          <noDeploy>true</noDeploy>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jdeprscan-plugin</artifactId>
        <version>3.0.0-alpha-1</version>
        <configuration>
          <release>11</release>
        </configuration>
      </plugin>
    </plugins>
  </build>

