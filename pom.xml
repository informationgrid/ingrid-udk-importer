  <groupId>de.ingrid</groupId>
  <artifactId>ingrid-udk-importer</artifactId>
  <version>3.2.1</version>
  <name>InGrid UDK-IGC Importer (IGC Updater)</name>
  <build>
    <finalName>${project.artifactId}-${project.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <!-- Add Type of Component to be added to Manifest of Installer for Upgrade Server -->
        <configuration>
            <archive>
              <manifestEntries>
                  <ingridComponentType>UDK_IMPORTER_UPDATER</ingridComponentType>
            </manifestEntries>
            </archive>
        </configuration>
        <executions>
          <execution>
            <id>make-jar-with-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>true</appendAssemblyId>
              <descriptors>
                <descriptor>src/main/assembly/jar-with-dependencies.xml</descriptor>
              </descriptors>
              <archive>
                <manifest>
                  <mainClass>de.ingrid.importer.udk.Importer</mainClass>
                  <packageName>de.ingrid.importer.udk</packageName>
                </manifest>
              </archive>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <!-- USE assembly:single for release so release installer is deployed to repo ! Needed in IGE iPlug -->
          <preparationGoals>clean verify changes:changes-report assembly:single deploy wagon:upload -Dproject.url=</preparationGoals>
        </configuration>
      </plugin>
    </plugins>
  </build>

